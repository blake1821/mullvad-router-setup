    "version": "0.2.0",
    "configurations": [
        {
            "name": "Insert Kernel Module",
            "request": "launch",
            "type": "node-terminal",
            "preLaunchTask": "Load Kernel Module",
            "command": "lsmod | grep trafficmon"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Connect",
            "type": "debugpy",
            "request": "launch",
            "program": "src/connect.py",
            "console": "integratedTerminal",
            "sudo": true
        },
        {
            "name": "Web Server",
            "type": "debugpy",
            "request": "launch",
            "program": "src/router-website-service.py",
            "console": "integratedTerminal",
            "sudo": true
        }
    ]
}