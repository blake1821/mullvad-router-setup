{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cmake",
            "label": "CMake: Configure",
            "command": "configure",
        },
        {
            "type": "cmake",
            "label": "Build Kernel Module",
            "command": "build",
            "targets": [
                "module"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task",
            "dependsOn": [
                "CMake: Configure"
            ]
        },
        {
            "label": "Load Kernel Module",
            "type": "shell",
            "command": "sudo",
            "args": [
                "bash",
                "-c",
                "rmmod trafficmon 2>/dev/null; insmod ${workspaceFolder}/traffic-monitor/build/kernel/trafficmon.ko"
            ],
            "dependsOn": [
                "Build Kernel Module"
            ]
        }
    ],
    "version": "2.0.0"
}